# AMD64/x86_64 specific kernel config fragment

# Enable essential x86_64 security features
CONFIG_X86_SMAP=y
CONFIG_X86_SMEP=y
CONFIG_X86_UMIP=y
CONFIG_X86_CET=y
CONFIG_X86_IBT=y
CONFIG_X86_KERNEL_IBT=y

# x86_64 specific serial console
CONFIG_SERIAL_8250=y
CONFIG_SERIAL_8250_CONSOLE=y

# x86_64 specific timer and CPU features
CONFIG_X86_TSC=y
CONFIG_X86_FEATURE_NAMES=y 